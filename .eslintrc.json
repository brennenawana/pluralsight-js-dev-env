//bit.ly/jsdeveslint

{
  "root": true, //saying that this file is in the root. Can help avoid wierd behavior if another lint file appears somewhere
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module" //standar JS modules
  },
  "env": { // framework specific
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": { // for overriding
    "no-console": 1 // 0: off, 1: warning, 2: error | this is catching console.log's
  }
}
